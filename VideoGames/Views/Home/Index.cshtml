@model Games

@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Global Styles */
    body {
        background: rgb(2, 0, 36);
        background: linear-gradient(90deg, rgba(2, 0, 36, 1) 0%, rgba(121, 9, 23, 0.891281512605042) 51%, rgba(255, 0, 78, 0.7960434173669468) 79%);
        font-family: Courier New, Courier, monospace;
        color: #ffffff;
    }

    .text-center {
        margin-top: 50px;
    }

    h1.display-4 {
        font-size: 36px;
    }

    p {
        font-size: 18px;
    }

    img {
        max-width: 100%;
    }

    /* Game Styles */
    .game-container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 50px;
    }

    .game {
        width: calc(25% - 20px);
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        padding: 20px;
        text-align: center;
    }

    .game-image {
        width: 100%;
        max-height: 150px;
        object-fit: contain;
        border-radius: 3px;
        box-shadow: 0 10px 10px 0 rgba(10, 11, 14, 0.6);
    }

    .game-title {
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
    }

    .sample-games {
        text-align: center;
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 20px;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Video Games</h1>
    <p>Your one-stop shop to View and Purchase Video Games</p>
    <img src="https://media.istockphoto.com/id/1334436084/photo/top-down-view-of-colorful-illuminated-gaming-accessories-laying-on-table.jpg?s=612x612&w=0&k=20&c=E9xnbAZoBS5LlUX0q-zxT_3m6gEZpyB2k51_U4LLMNs=" alt="Gamer Holding Gamepad">
</div>

<div class="sample-games">
    Some Sample Games
</div>

<div class="game-container">
    <div class="game">
        <div class="game-title">Returnal</div>
        <img class="game-image" src="https://tinyurl.com/returnal113" alt="Returnal Image" />
    </div>
    <div class="game">
        <div class="game-title">Resident Evil Village</div>
        <img class="game-image" src="https://tinyurl.com/ResidentERise" alt="Resident Evil Village Image" />
    </div>
    <div class="game">
        <div class="game-title">Star Wars Jedi: Fallen Order</div>
        <img class="game-image" src="https://tinyurl.com/Starrywars" alt="Star Wars Jedi: Fallen Order Image" />
    </div>
    <div class="game">
        <div class="game-title">It Takes Two</div>
        <img class="game-image" src="https://tinyurl.com/ittakes2111" alt="It Takes Two Image" />
    </div>
</div>