@model Games

<h2>Create a New Game</h2>

@using (Html.BeginForm("AddGameToDatabase", "Games", "Post"))
{
    <input asp-for="ID" type="hidden" value="" />

    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Title" class="form-control" value="Title" />

    <label asp-for="Genre" class="control-label">Genre</label>
    <input type="text" name="Genre" class="form-control" value="Genre" />

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />

    <label asp-for="Description" class="control-label">Description</label>
    <input type="text" name="Description" class="form-control" value="Description" />

    <label asp-for="ImageURL" class="control-label">ImageURL</label>
    <input type="text" name="ImageURL" class="form-control" value="ImageURL" />

    <input type="submit" value="Create Game" class="btn btn-primary" />
}

