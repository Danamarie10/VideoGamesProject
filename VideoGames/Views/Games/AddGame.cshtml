@model Games

<div class="text-center">
    <h2>Create a New Game</h2>

    @using (Html.BeginForm("AddGameToDatabase", "Games", "Post"))
    {
        
        <div class="form-group">
            <input asp-for="ID" type="hidden" value="" />

            <label asp-for="Title" class="control-label">Title</label>
            <input type="text" name="Title" class="form-control" value="Title" />
        </div>

        <div class="form-group">
            <label asp-for="Genre" class="control-label">Genre</label>
            <input type="text" name="Genre" class="form-control" value="Genre" />
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Price</label>
            <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <input type="text" name="Description" class="form-control" value="Description" />
        </div>

        <div class="form-group">
            <label asp-for="ImageURL" class="control-label">ImageURL</label>
            <input type="text" name="ImageURL" class="form-control" value="ImageURL" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary square-btn">Create Game</button>
        </div>
       
    }
</div>

<style>
    body {
        background-color: #000000; /* Black background */
        font-family: Courier New, Courier, monospace; /* Replace 'YourCustomFont' with the name of your custom font */
        color: #ffffff; /* Text color */
    }

    .table {
        color: white; /* Text color inside the table */
    }
    .square-btn {
        background: red;
    }
</style>
