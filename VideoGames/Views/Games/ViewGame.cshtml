@model Games

<h3>@Model.ID Information</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Genre</th>
        <th>ImageURL</th>
    </tr>

    <tr>
        <td>@Model.ID</td>
        <td>@Model.Title</td>
        <td>@Model.Description</td>
        <td>@Model.Price</td>
        <td>@Model.Genre</td>
        <td>@Model.ImageURL</td>

    </tr>


</table>

<div class="text-center">
    <img src="@Model.ImageURL" style="height:300px; width: auto; border-radius: 7px; box-shadow: 0 10px 10px 0 rgba(10, 11, 14, 0.6);" />
</div>

<div style="display: block">
    <a href="/Games/UpdateGame/@Model.ID">Update this Game</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteGame", "Games", "Post"))
    {
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this game" />
    }
</div>
<style>
    body {
        background-color: #000000; /* Black background */
        font-family: Courier New, Courier, monospace; /* Replace 'YourCustomFont' with the name of your custom font */
        color: #ffffff; /* Text color */
    }

    .table {
        color: white; /* Text color inside the table */
    }
</style>


