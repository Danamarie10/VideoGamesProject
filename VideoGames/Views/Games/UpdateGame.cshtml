@model Games

<h2>Update Game @Model.Title</h2>

@using (Html.BeginForm("UpdateGameToDatabase", "Game", "Post"))
{
    <input asp-for="ID" type="hidden" value="@Model.ID" />

    <label asp-for="Title" class="control-label">Title</label>
    <input type="text" name="Title" class="form-control" value="@Model.Title" />

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />

    <input type="submit" value="Update Game" class="btn btn-primary" />
}
<style>
    body {
        background: rgb(2,0,36);
        background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(121,9,23,0.891281512605042) 51%, rgba(255,0,78,0.7960434173669468) 79%);
